---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
// import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { YOUTUBE_URL, KO_FI_URL } from '~/utils/permalinks';

const metadata = {
  title: 'Vikshan — Tech Enthusiast',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'yt',
        text: 'Subscribe',
        href: YOUTUBE_URL,
        target: '_blank',
        icon: 'tabler:brand-youtube',
      },
      {
        variant: 'secondary',
        text: 'Support Me on Ko-fi',
        href: KO_FI_URL,
        target: '_blank',
        icon: 'tabler:coffee',
      },
    ]}
  >
    <Fragment slot="image">
      <div class="relative h-0 pb-[56.25%]">
        <iframe
          width="560"
          height="315"
          src="https://www.youtube.com/embed/154slZCJJS4?si=d7Q27upK3_AZYNW9"
          title="YouTube video player"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
          allowfullscreen
          class="absolute top-0 left-0 w-full h-full"
        >
        </iframe>
      </div>
    </Fragment>

    <Fragment slot="title">
      Meet Vikshan, <span class="hidden xl:inline">making YouTube videos</span>
      <span class="text-accent dark:text-white highlight"> a YBBFA </span> with a Dream!
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Tech Tuber</span> from Africa sharing knowledge with YouTube and the world.</span
      >
      <br /><br />
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Vikshan</span> Vikshan is a passionate student from Kenyatta
      University, East Africa, inspired by TechTubers like MKBHD, mrwhosetheboss, JRE, and Hugh Jeffreys.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="Vikshan: The Channel & Community"
    subtitle="One of the most passionate and comprehensive TechTubers currently on the planet dedicated to delivering engaging and insightful content about technology. Join a community of tech enthusiasts and learners."
    items={[
      {
        title: 'Tech Unboxing & Reviews',
        description:
          'In-depth unboxings and reviews of the latest tech products, providing honest opinions and insights.',
        icon: 'tabler:package',
      },
      {
        title: 'Passionate Tech Content',
        description:
          'Engaging and informative videos covering the latest in technology, reviews, tutorials, and discussions.',
        icon: 'tabler:brand-youtube',
      },
      {
        title: 'Quality Production',
        description: 'High-quality video production ensuring clear visuals, crisp audio, and engaging storytelling.',
        icon: 'tabler:video',
      },
      {
        title: 'Tech Insights & Best Practices',
        description: 'Insightful discussions on best practices in technology, trends, and how-tos to empower you.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Consistent Weekly Uploads',
        description: 'New videos posted every week, ensuring a steady stream of fresh content for you.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Collaborative Community',
        description: 'A collaborative environment open to new ideas, feedback, and contributions from the community.',
        icon: 'tabler:arrows-right-left',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Inside Vikshan's Channel"
    title="Experience Vikshan's Tech World: Dive In!"
    items={[
      {
        title: 'Subscribe & Support',
        description:
          'Join Vikshan’s tech community by subscribing to the channel, and consider supporting the content through donations on Ko-Fi. Your support keeps the tech journey going!',
        icon: 'tabler:heart-plus',
      },
      {
        title: 'Interact & Engage',
        description:
          'Get involved in discussions, leave comments, and share your thoughts on tech topics covered in the videos and blog posts. Your interaction enriches the community!',
        icon: 'tabler:heart-up',
      },
      {
        title: 'Explore the Blog',
        description:
          'Dive deeper into the world of tech through Vikshan’s blog, featuring in-depth articles, reviews, and tech insights. Expand your knowledge!',
        icon: 'tabler:heart-search',
      },
    ]}
    image={{
      src: '~/assets/images/vikshan.JPG',
      alt: 'Tech World Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Welcome to Vikshan's Tech Universe
      </h3>
      Explore, engage, and be a part of the vibrant tech community!
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-white dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Join Vikshan's Tech Journey: Simple Steps to Get Started!"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Subscribe</span>',
        description:
          "Join the tech adventure by subscribing to Vikshan's YouTube channel. Stay updated with weekly tech videos and be a part of the tech community.",
        icon: 'tabler:brand-youtube',
      },
      {
        title: 'Step 2: <span class="font-medium">Donate</em>',
        description:
          "Support Vikshan's content creation efforts by donating on Ko-Fi. Your contribution helps in acquiring equipment and creating more quality content.",
        icon: 'tabler:coin',
      },
      {
        title: 'Step 3: <span class="font-medium">Interact</span>',
        description:
          'Engage with Vikshan and fellow viewers by leaving comments, sharing your tech insights, and participating in discussions.',
        icon: 'tabler:message-up',
      },
      {
        title: 'Step 4: <span class="font-medium">Explore</span>',
        description:
          'Dive into Vikshan’s blog for in-depth articles, tech reviews, and insightful content. Expand your tech knowledge!',
        icon: 'tabler:app-window',
      },
      {
        title: 'Step 5: <span class="font-medium">Share</span>',
        description:
          'Help Vikshan’s channel grow by sharing the videos and blog posts with your friends, family, and fellow tech enthusiasts. Spread the tech love!',
        icon: 'tabler:share',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

